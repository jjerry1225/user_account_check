<div class="mt-5">
  <h2 class="text-center">Account Login</h2>
</div>

<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-auto">
      <form action="/" method="POST">
        <div class="mb-3">
          <label>Email address</label>
          <input
            type="email"
            class="form-control"
            name="InputEmail"
            aria-describedby="emailHelp"
            required
          />
          <div id="emailHelp" class="form-text">We'll never share your email
            with anyone else.</div>
        </div>
        <div class="mb-3">
          <label >Password</label>
          <input type="password" class="form-control" name="InputPassword" required/>
        </div>
        {{#if index}}
          <div>
            <span class="text-danger">Email 或 Password 錯誤</span>
          </div>
        {{/if}}
        <div align="center" class="mt-3">
          <button type="submit" class="btn btn-primary">Sign in</button>
        </div>
      </form>
    </div>
  </div>
</div>